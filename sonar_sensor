#include <Servo.h>

int trigger = 3;
int echo = 4;
int led = 5;
// Servo myservo;

float duration;
float distance;
int threshold = 20;

void setup() {
  pinMode(trigger, OUTPUT);
  pinMode(echo, INPUT);
  pinMode(led, OUTPUT);
  // myservo.attach(9);
  firsts.attach(9); // Correct Servo
}

void loop() {
  /* for(int position = 0; position <= 180; position++){
    myservo.write(position);
    delay(10);
  }

  for(int position = 180; position >= 0; position--){
    myservo.write(position);
    delay(10);
  } */
  firsts.write(0);    // Correct Servo
  delay(1000);        // Correct Servo
  firsts.write(180);  // Correct Servo
  delay(1000);        // Correct Servo

  digitalWrite(trigger, HIGH);
  delay(10);
  digitalWrite(trigger, LOW);

  duration = pulseIn(echo, HIGH);
  distance =(duration * 0.0343) / 2;

  if(distance <= 20){
    digitalWrite(led, HIGH);
    delay(1000);
    digitalWrite(led, LOW);
  } 
}